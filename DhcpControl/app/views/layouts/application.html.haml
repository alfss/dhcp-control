!!!
%html
  %head
    %title DhcpControl
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .topbar
      .topbar-inner
        .container-fluid
          %h3
            = link_to "DHCP Control v#{version}", root_path, :class => "brand"
          %ul.nav
            %li.active
              = link_to "Servers", servers_path
            %li
              = link_to "Users", users_path
            %li 
              = link_to "Settings", settings_path
            %li
              = link_to "About", about_path
          %ul.nav.secondary-nav
            %li
              = link_to "Logout", signout_path
    
    .container-fluid
      .sidebar
        #{h yield(:sidebar)}
      .content
        %ul.breadcrumb
          #{h yield(:breadcrumb)}
        - flash.each do |key, value|
          %div{:class => "alert-message block-message #{key}"}= value
        = yield
